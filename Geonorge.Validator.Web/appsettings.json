{
  "XsdValidator": {
    "MaxMessageCount": 500,
    "CacheFilesPath": "C:\\Geonorge\\validator\\XSD",
    "CachedUrisFileName": "cached-uris.txt",
    "CacheableHosts": [
      "www.w3.org",
      "schemas.opengis.net",
      "www.opengis.net",
      "shapechange.net",
      "isotc211.org",
      "skjema.geonorge.no"
    ]
  },
  "Codelists": {
    "CacheFilesPath": "C:\\Geonorge\\validator\\Codelists",
    "CachedUrisFileName": "cached-uris.txt",
    "AllowedHosts": [
      "register.geonorge.no"
    ]
  },
  "Cache": {
    "TimeOfUpdate": "03:00"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Storage.Internal.RelationalCommandBuilderFactory": "Warning",
        "Microsoft.EntityFrameworkCore.Storage.IRelationalCommandBuilderFactory": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] [Correlation ID: {CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] [Correlation ID: {CorrelationId}] {Message:lj}{NewLine}{Exception}",
          "path": "C:\\Geonorge\\validator\\Logs\\log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
